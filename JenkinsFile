pipeline {
    agent any
    tools {
        nodejs 'NodeJS_16' // Node.js version configured in Jenkins
    }
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/your_username/backend-repo.git' // Replace with your GitHub repo URL
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') { // Name of the SonarQube configuration in Jenkins
                    sh 'sonar-scanner'
                }
            }
        }
    }
}
